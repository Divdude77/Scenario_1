ScreenSwitcher:
    HomeScreen
    TestScreen
    QuestionsScreen

<HomeScreen>:
    name: "home"
    FloatLayout:
        MDLabel:
            text: "Logic Circuit Test"
            halign: "center"
            font_size: 100
            pos_hint: {"y": 0.1}
        MDFillRoundFlatButton:
            text: "START"
            pos_hint: {"center_x":0.5, "y": 0.3}
            font_size: 50
            size_hint: 0.7, 0.07
            on_release: app.root.current = "test"
        MDRoundFlatButton:
            text: "ADD QUESTIONS"
            pos_hint: {"center_x":0.5, "y": 0.2}
            font_size: 50
            size_hint: 0.7, 0.07
            on_release: app.root.current = "questions"

<TestScreen>:
    name: "test"
    FloatLayout:
        MDLabel:
            text: "Test will appear here"
            halign: "center"

<QuestionsScreen>:
    name: "questions"
    FloatLayout:
        MDLabel:
            text: "Form to add questions will appear here"
            halign: "center"
